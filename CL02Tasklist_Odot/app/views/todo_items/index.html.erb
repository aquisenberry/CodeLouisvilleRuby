<h1><%= @todoList.title%></h1>

<table class="todo-items">
	<% @todoList.todoItems.each do |item|%>
	<tr id="<%=dom_id(item) %>">
		<td><%=link_to "Mark Complete", complete_todo_list_todo_item_path(item), method: :patch %></td>
		<td><%=item.completed_at%></td>
		<td><%=item.content%></td>
		<td><%=link_to "Edit", edit_todo_list_todo_item_path(item) %>
		<%=link_to "Delete", todo_list_todo_item_path(item), method: :delete, data: {confirm: "Are you sure"} %></td>
	</tr>
	<%end%>
</table>

<p>
	<%=link_to "New Todo Item", new_todo_list_todo_item_path %>
</p>